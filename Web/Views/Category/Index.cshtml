@using Infrastructure.Services.TaskServices
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Infrastructure.Services.CategoryServices
@model Response<List<CategoryDto>>
@inject ICategoryService Task

<div style="margin-top: 20px">
    <a type="button" href="/category/create" class="btn btn-primary">Create category</a>
    <div class="col-md-3 mt-4">
        <form class="d-flex gap-1">
            <input class="form-control" name="Name" type="search" placeholder="Name" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
    <table style="margin-top: 20px" class="table table-hover">
        <tr>
            <td><b>#</b></td>
            <td><b>Category name</b></td>
            <td><b>Description</b></td>
            <td><b>Action</b></td>
        </tr>
        @{
            var categories = Model.Data;
            int i = 1;
        }
        @foreach (var category in categories)
        {
            <tr>
                <td>@(i++)</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a class="text-decoration-none" href="/category/edit/@category.Id">Edit</a>
                    <a class="text-decoration-none" style="margin-left: 5px" href="/category/delete/@category.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
