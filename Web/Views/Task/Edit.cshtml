@model TaskDto

<div class="mt-3">
    <form method="post">
        <div class="form-group">
            <input asp-for="Title" type="text" class="form-control" id="Title" placeholder="Title">
        </div>
        <div class="form-group mt-3">
            <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="Description">
        </div>
        <div class="form-group d-flex col-md-12 gap-3">
            <select asp-for="CategoryId" class="form-control mt-3" id="Category">
                @foreach (var item in ViewBag.Categories)
                {
                    <option value="@item.Id"> @(item.CategoryName) </option>
                }
            </select>
            <select asp-for="UserId" class="form-control mt-3" id="User">
                @foreach (var item in ViewBag.Users)
                {
                    <option value="@item.Id">@(string.Concat(item.FirstName, " ", item.LastName)) </option>
                }
            </select>
            <select asp-for="TaskPriority" class="form-control mt-3" id="Priority">
                @foreach (var item in ViewBag.Priorities)
                {
                    <option value="@item"> @item </option>
                }
            </select>
            <select asp-for="IsComleted" class="form-control mt-3" id="IsCompleted">
                <option value="@true"> Completed </option>
                <option value="@false"> Not completed </option>
            </select>
            
            
            
        </div>
        <div class="col-12 mt-3">
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
    </form>
</div>